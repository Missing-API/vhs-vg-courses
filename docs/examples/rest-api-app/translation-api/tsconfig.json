{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/clients/geonames/geonamesGetUniqueCommunitySlug.tmp",
    "src/types/GeoLocation/transformers/map-googlemaps-address-components-2-geo-administrative-hierarchy.test.tmp",
    "src/types/GeoLocation/helpers/compose-geocoded-geolocation.test.tmp"
  ],
  "exclude": ["node_modules", "**./*.json"]
}
